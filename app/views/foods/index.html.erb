<div id="foods" class="mx-5">
  <div class="d-flex justify-content-between align-items-center">
    <h1>My Inventory</h1>
    <button type="button" class="btn btn-primary mb-4" data-bs-toggle="modal" data-bs-target="#foodsModal">
      Add food
    </button>
  </div>
  <table class="table table-striped table-hover table-bordered table-sortable">
    <thead>
      <tr>
        <th>Food</th>
        <th>Quantity owned</th>
        <th>Unit price</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody class="align-baseline">
      <% @foods.each do |food| %>
        <tr>
        <td><%= food.name %></td>
        <td><%= "#{food.quantity} #{food.measurement_unit}" %></td>
        <td>$<%= food.price %></td>
        <td><%= button_to "Delete", food, method: :delete, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="modal" tabindex="-2" id="foodsModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">New food</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <%= render "form", food: Food.new %>
      </div>
    </div>
  </div>
</div>