<h1 class="text-center text-3xl font-bold mb-8">Edit food</h1>
<%= form_with model: @food, url: food_path(@food.id), method: :patch, local: true do |f| %>

  <div class="flex flex-col">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="flex flex-col">
    <%= f.label :measurement_unit %>
    <%= f.text_field :measurement_unit %>
  </div>

  <div class="flex flex-col">
    <%= f.label :quantity %>
    <%= f.number_field :quantity %>
  </div>

  <div class="flex flex-col">
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div>

  <%= f.hidden_field :user_id %>

  <div class="mt-4 flex justify-between">
    <div class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mr-2">
      <%= f.submit %>
    </div>
    <%= link_to "Cancel", foods_path, class: 'bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded' %>
  </div>
<% end %>