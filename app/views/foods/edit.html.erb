<h1>Edit food</h1>
<%= form_with model: @food, url: food_path(@food.id), method: :patch, local: true do |f| %>

  <div class="flex flex-col">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="flex flex-col">
    <%= f.label :measurement_unit %>
    <%= f.text_field :measurement_unit %>
  </div>

  <div class="flex flex-col">
    <%= f.label :quantity %>
    <%= f.number_field :quantity %>
  </div>

  <div class="flex flex-col">
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div>

  <%= f.hidden_field :user_id %>

  <div>
    <%= f.submit %>
  </div>
<% end %>