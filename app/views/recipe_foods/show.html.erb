<div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
  <%= render @recipe_food %>
  <div class="flex items-center justify-between">
    <%= link_to "Edit this recipe food", edit_user_recipe_recipe_food_path(@recipe_food), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    <%= link_to "Back to recipe foods", user_rrecipe_foods_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    <%= button_to "Destroy this recipe food", recipe_food_path, method: :delete, data: { confirm: "Are you sure?" }, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  </div>
</div>